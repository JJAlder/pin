<div class="jumbotron center">
	<h1>Welcome to Food Baby!!</h1>
		<p>
			<%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %> now to start posting your pictures!
		</p>
	
<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 500px; margin: 0 auto">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item">
      <img src="https://snap-photos.s3.amazonaws.com/img-thumbs/960w/BVFC853K3V.jpg" alt="Chicken">
      <div class="carousel-caption">
        <h3>Presentation is Everything!</h3>
        <p>Show off that beautiful work of art!</p>
      </div>
    </div>
  
		<div class="item">
      <img src="https://snap-photos.s3.amazonaws.com/img-thumbs/960w/E7240W77YV.jpg" alt="streetmeat">
      <div class="carousel-caption">
        <h3>Vendors are our friends</h3>
        <p>Who doesn't love some great street food</p>
      </div>
    </div>

    <div class="item active">
      <img src="https://snap-photos.s3.amazonaws.com/img-thumbs/960w/41053A7BDE.jpg" alt="Cafe">
      <div class="carousel-caption">
        <h3>What's your guilty pleasure?</h3>
        <p></p>
      </div>
    </div>

    <div class="item">
      <img src="https://images.unsplash.com/photo-1428660386617-8d277e7deaf2?q=80&fm=jpg&s=5dd8fbcece572d1b2bb8a66866ce6024" alt="Beer">
      <div class="burger">
        <h3></h3>
        <p></p>
      </div>
    </div>

    
	</div>
    

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
	
</div>

	
